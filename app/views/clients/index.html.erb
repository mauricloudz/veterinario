<p id="notice"><%= notice %></p>

<h1 class="mt-5 text-center">Clients</h1>

<div class="text-right mt-5">
<%= link_to 'New Client', new_client_path, :class => 'btn btn-primary' %>
</div>
<table class="table table-bordered table-hover text-center mt-5">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Pets</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.petCounts %></td>
        <td><%= link_to 'Show', client, :class => 'btn btn-light btn-sm' %>
        <%= link_to 'Edit', edit_client_path(client), :class => 'btn btn-light btn-sm' %>
        <%= link_to 'Destroy', client, :class => 'btn btn-light btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

