<p id="notice"><%= notice %></p>

<div class="container mt-5 py-3 text-center">
<h3 class="mb-4">
  <strong>Name:</strong>
  <%= @client.name %>
</h3>

<h5>
  <strong>Phone:</strong>
  <%= @client.phone %>
</h5>

<h5 class="mb-5">
  <strong>Email:</strong>
  <%= @client.email %>
</h5>


<%= link_to 'Edit', edit_client_path(@client), :class => "btn btn-success btn-sm" %>
<%= link_to "See Client Pets", client_pets_path(@client), :class => "btn btn-info btn-sm" %>
<%= link_to 'Back', clients_path, :class => "btn btn-light btn-sm" %>
</div>

<hr>

<div class="container" style="width: 80vh">
<h2 class="mt-5"><%= @client.name %> Pets</h2>

<table class="table table-sm table-hover table-light text-center">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Max Weight</th>
      <th>Max Height</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% @client.pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.maxWeight %></td>
        <td><%= pet.maxHeight %></td>
        <td><%= link_to "See More", client_pet_path(@client, pet), :class => "btn btn-success btn-sm" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>

