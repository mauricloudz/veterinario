<p id="notice"><%= notice %></p>

<h1 class="mt-5 text-center">Pet Histories</h1>

<div class="text-right mt-5">
  <%= link_to 'New Pet History', new_client_pet_pet_history_path, :class => 'btn btn-success' %>
  <%= link_to 'Back To Pets List', client_pets_path, :class => 'btn btn-primary' %>
</div>

<table class="table table-bordered table-hover text-center mt-5">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Heigth</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.petName %></td>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.description %></td>
        <td><%= link_to 'Show', client_pet_pet_history_path(@client, @pet, pet_history), :class => 'btn btn-light btn-sm' %>
        <%= link_to 'Edit', edit_client_pet_pet_history_path(@client, @pet, pet_history), :class => 'btn btn-light btn-sm' %>
        <%= link_to 'Destroy', client_pet_pet_history_path(@client, @pet, pet_history), :class => 'btn btn-light btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


